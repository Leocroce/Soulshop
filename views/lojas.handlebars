<section class="m-1">
    <a href="/lojas/novo" class="btn btn-dark"> 
        <i class="bi bi-plus"></i>
        Criar loja
    </a>
    <hr/>
    <form method="GET">
        <input 
        type="text" 
        name="nomeLoja"
        placeholder="Nome do Loja"
        class="form-control form-control-sm"
        value="{{nomeLoja}}"
        >
        <button class="btn btn-sm btn-dark mt-1">
            <i class="bi bi-search"></i>
            Buscar
        </button>
    </form>
    <table class="table">
        <thead>
            <th>Cnpj</th>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Ações</th>
        </thead>
        <tbody>
            {{#each lojas}}
            <tr>
                <td>{{this.cnpj}}</td>
                <td>{{this.nome}}</td>
                <td>{{this.endereco}}</td>
                <td>{{this.telefone}}</td>
                <td>
                    <div class="d-flex">
                        <div>
                            <a href="/lojas/editar/{{this._id}}" class="btn btn-sm btn-warning mx-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                        <div>
                            <form action="/lojas/deletar/" method="POST">
                                <input type="hidden" name="id" value="{{this._id}}">
                                <button class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>